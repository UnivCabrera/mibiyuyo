{
    // =========================================================================
    // ü§ñ COPILOT SETTINGS
    // =========================================================================
    "chat.agent.maxRequests": 100,

    // =========================================================================
    // üìù MARKDOWNLINT SETTINGS
    // =========================================================================
    
    // Usar archivo de configuraci√≥n del proyecto
    "markdownlint.configFile": ".markdownlint.jsonc",
    
    // Modo enfocado: no mostrar warnings en l√≠nea actual + 2 arriba/abajo
    "markdownlint.focusMode": 2,
    
    // Ejecutar linting mientras escribes (alternativa: "onSave")
    "markdownlint.run": "onType",
    
    // Globs para linting del workspace (excluir legacy)
    "markdownlint.lintWorkspaceGlobs": [
        "**/*.md",
        "!**/node_modules/**",
        "!**/00_LEGADO_PRIMERA_LLUVIA_IDEAS/**",
        "!**/.git/**"
    ],

    // =========================================================================
    // üìÑ MARKDOWN EDITOR SETTINGS
    // =========================================================================
    "[markdown]": {
        // Formatear autom√°ticamente al guardar
        "editor.formatOnSave": true,
        
        // Formatear al pegar
        "editor.formatOnPaste": true,
        
        // Word wrap para mejor lectura
        "editor.wordWrap": "on",
        
        // Mostrar espacios en blanco
        "editor.renderWhitespace": "trailing",
        
        // Tama√±o de tab
        "editor.tabSize": 2,
        
        // Usar espacios en lugar de tabs
        "editor.insertSpaces": true,
        
        // Recortar espacios al final al guardar
        "files.trimTrailingWhitespace": true,
        
        // Asegurar l√≠nea final vac√≠a
        "files.insertFinalNewline": true,
        
        // Quitar l√≠neas vac√≠as extra al final
        "files.trimFinalNewlines": true,
        
        // Quick suggestions para snippets
        "editor.quickSuggestions": {
            "other": true,
            "comments": false,
            "strings": false
        },
        
        // Formatter por defecto
        "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
    },

    // =========================================================================
    // üîÑ AUTO-FIX AL GUARDAR
    // =========================================================================
    "editor.codeActionsOnSave": {
        // markdownlint corrige autom√°ticamente lo que pueda
        "source.fixAll.markdownlint": "explicit"
    },

    // =========================================================================
    // üìÅ FILES SETTINGS (para todo el proyecto)
    // =========================================================================
    "files.associations": {
        "*.md": "markdown",
        "*.mdx": "markdown"
    },
    
    // Excluir carpetas de b√∫squeda
    "files.exclude": {
        "**/node_modules": true,
        "**/.git": true,
        "**/00_LEGADO_PRIMERA_LLUVIA_IDEAS": false
    },
    
    // Excluir de b√∫squeda pero no ocultar
    "search.exclude": {
        "**/00_LEGADO_PRIMERA_LLUVIA_IDEAS": true
    }
}