# =============================================================================
# üìê EditorConfig - PRO_FINAN_CONTA_PYM
# =============================================================================
# https://editorconfig.org
# Asegura consistencia entre diferentes editores e IDEs
# =============================================================================

root = true

# -----------------------------------------------------------------------------
# Configuraci√≥n global
# -----------------------------------------------------------------------------
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# -----------------------------------------------------------------------------
# Markdown
# -----------------------------------------------------------------------------
[*.{md,markdown}]
indent_size = 2
trim_trailing_whitespace = false
max_line_length = off

# -----------------------------------------------------------------------------
# JavaScript/TypeScript
# -----------------------------------------------------------------------------
[*.{js,ts,jsx,tsx}]
indent_size = 2

# -----------------------------------------------------------------------------
# Svelte
# -----------------------------------------------------------------------------
[*.svelte]
indent_size = 2

# -----------------------------------------------------------------------------
# JSON/YAML
# -----------------------------------------------------------------------------
[*.{json,jsonc,yaml,yml}]
indent_size = 2

# -----------------------------------------------------------------------------
# CSS
# -----------------------------------------------------------------------------
[*.{css,scss,sass}]
indent_size = 2

# -----------------------------------------------------------------------------
# Shell scripts
# -----------------------------------------------------------------------------
[*.sh]
indent_size = 2

# -----------------------------------------------------------------------------
# Makefiles (requieren tabs)
# -----------------------------------------------------------------------------
[Makefile]
indent_style = tab
